<Window x:Class="EasySave.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.WPF"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:enums="clr-namespace:EasySave.WPF.Enumerations"
        mc:Ignorable="d"
        Title="EasySave v3.0" Height="650" Width="950"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ObjectDataProvider x:Key="BackupTypeEnum" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:BackupType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="LanguageEnum" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:Language"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <TabControl Margin="5">

        <TabItem Header="{Binding Labels[TabHome]}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <GroupBox Header="{Binding Labels[JobName]}" Grid.Row="0" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding Labels[JobName]}" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Labels[SourcePath]}" Grid.Column="1" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Labels[TargetPath]}" Grid.Column="2" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Labels[Type]}" Grid.Column="3" FontWeight="Bold"/>

                        <TextBox Text="{Binding JobName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="0" Margin="0,5,5,0"/>
                        <Grid Grid.Row="1" Grid.Column="1" Margin="0,5,5,0">
                            <TextBox Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}" Padding="0,0,25,0"/>
                            <Button Content="📂" Command="{Binding BrowseSourceCommand}" Width="20" HorizontalAlignment="Right" Margin="2" Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="2" Margin="0,5,5,0">
                            <TextBox Text="{Binding TargetPath, UpdateSourceTrigger=PropertyChanged}" Padding="0,0,25,0"/>
                            <Button Content="📂" Command="{Binding BrowseTargetCommand}" Width="20" HorizontalAlignment="Right" Margin="2" Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                        </Grid>

                        <ComboBox ItemsSource="{Binding Source={StaticResource BackupTypeEnum}}" 
                                  SelectedItem="{Binding SelectedType}" 
                                  Grid.Row="1" Grid.Column="3" Width="100" Margin="0,5,5,0" VerticalContentAlignment="Center"/>

                        <Button Content="{Binding Labels[Create]}" Command="{Binding CreateJobCommand}" 
                                Grid.Row="1" Grid.Column="4" Width="80" Margin="0,5,0,0"/>
                    </Grid>
                </GroupBox>

                <DataGrid x:Name="JobsDataGrid"
                          Grid.Row="1" 
                          ItemsSource="{Binding BackupJobs}" 
                          SelectedItem="{Binding SelectedJob}"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          SelectionMode="Extended"
                          SelectionChanged="DataGrid_SelectionChanged"
                          BorderBrush="Gray" BorderThickness="1">

                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}" Width="150">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DataContext.Labels[JobName], RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>

                        <DataGridTextColumn Binding="{Binding ShortSourceDirectory}" Width="*">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DataContext.Labels[SourcePath], RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="ToolTip" Value="{Binding SourceDirectory}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Binding="{Binding ShortTargetDirectory}" Width="*">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DataContext.Labels[TargetPath], RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="ToolTip" Value="{Binding TargetDirectory}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Binding="{Binding Type}" Width="80">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DataContext.Labels[Type], RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Width="150">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DataContext.Labels[State], RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ProgressBar Value="{Binding Progress}" 
                                                     Minimum="0" Maximum="100" 
                                                     Height="15" 
                                                     VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding ProgressText}" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="10" 
                                                   FontWeight="Bold"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>

                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,10">
                    <Button Content="{Binding Labels[Delete]}" Command="{Binding DeleteJobCommand}" 
                            Width="100" Height="30" Margin="0,0,10,0" Background="#FFCCCC"/>

                    <Button Content="{Binding Labels[Execute]}" Command="{Binding ExecuteJobCommand}" 
                            Width="100" Height="30" Background="#CCFFCC" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </TabItem>

        <TabItem Header="{Binding Labels[TabSettings]}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20" MaxWidth="800" HorizontalAlignment="Left">
                    <TextBlock Text="{Binding Labels[TitleSettings]}" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2D3E50"/>

                    <GroupBox Header="{Binding Labels[General]}" Margin="0,0,0,20" Padding="15" BorderBrush="#DDD" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,15">
                                <TextBlock Text="{Binding Labels[LogFormat]}" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Labels[LogFormatDesc]}" FontSize="11" Foreground="Gray"/>
                            </StackPanel>
                            <ComboBox Grid.Row="0" Grid.Column="1" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,15"
                                      ItemsSource="{Binding LogFormats}"
                                      SelectedItem="{Binding SelectedLogFormat}"/>

                            <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,15">
                                <TextBlock Text="{Binding Labels[LangInterface]}" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Labels[LangInterfaceDesc]}" FontSize="11" Foreground="Gray"/>
                            </StackPanel>
                            <ComboBox Grid.Row="1" Grid.Column="1" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,15"
                                      ItemsSource="{Binding Source={StaticResource LanguageEnum}}"
                                      SelectedItem="{Binding SelectedLanguage}"/>

                            <StackPanel Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Labels[LogServerIP]}" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Labels[LogServerIPDesc]}" FontSize="11" Foreground="Gray"/>
                            </StackPanel>
                            <TextBox Grid.Row="2" Grid.Column="1" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5"
                                     Text="{Binding LogServerIP, UpdateSourceTrigger=PropertyChanged}" 
                                     ToolTip="{Binding Labels[LogServerIPDesc]}"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="{Binding Labels[PriorityExtensions]}" Margin="0,0,0,20" Padding="15" BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="{Binding Labels[PriorityExtensions]}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Labels[PriorityExtensionsDesc]}" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBox Width="180" Height="28" VerticalContentAlignment="Center" 
                                         Text="{Binding NewPriorityExtensionInput, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Content="+" Command="{Binding AddPriorityExtensionCommand}" Width="30" Margin="5,0,0,0"
                                        Background="#E7F3FF" BorderBrush="#0078D7" FontWeight="Bold"/>
                            </StackPanel>

                            <ItemsControl ItemsSource="{Binding PriorityExtensionsList}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F0F0F0" BorderBrush="#CCC" BorderThickness="1" CornerRadius="12" Padding="8,3" Margin="0,0,5,5">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="12"/>
                                                <Button Content="✕" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}, Path=DataContext.RemovePriorityExtensionCommand}" 
                                                        CommandParameter="{Binding}"
                                                        Margin="8,0,0,0" Padding="0" FontSize="10" Background="Transparent" BorderBrush="Transparent" Foreground="#D32F2F" Cursor="Hand"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="{Binding Labels[Encryption]}" Margin="0,0,0,20" Padding="15" BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Labels[EncryptAll]}" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Labels[EncryptAllDesc]}" FontSize="11" Foreground="Gray"/>
                                </StackPanel>
                                <CheckBox Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                                          IsChecked="{Binding EncryptAll}">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                            </Grid>

                            <Separator Margin="0,5,0,15"/>

                            <TextBlock Text="{Binding Labels[EncryptExtensions]}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding EncryptAll}" Value="True">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBox x:Name="NewExtensionInputTextBox" Width="180" Height="28" VerticalContentAlignment="Center" 
                                         Text="{Binding NewExtensionInput, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Content="+" Command="{Binding AddExtensionCommand}" Width="30" Margin="5,0,0,0" 
                                        Background="#E7F3FF" BorderBrush="#0078D7" FontWeight="Bold"/>
                            </StackPanel>

                            <ItemsControl ItemsSource="{Binding EncryptedExtensionsList}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F0F0F0" BorderBrush="#CCC" BorderThickness="1" CornerRadius="12" Padding="8,3" Margin="0,0,5,5">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="12"/>
                                                <Button Content="✕" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}, Path=DataContext.RemoveExtensionCommand}" 
                                                        CommandParameter="{Binding}"
                                                        Margin="8,0,0,0" Padding="0" FontSize="10" Background="Transparent" BorderBrush="Transparent" Foreground="#D32F2F" Cursor="Hand"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="{Binding Labels[BlockedProcesses]}" Margin="0,0,0,20" Padding="15" BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="{Binding Labels[BlockedProcesses]}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Labels[BlockedProcessesDesc]}" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBox x:Name="NewProcessInputTextBox" Width="180" Height="28" VerticalContentAlignment="Center" 
                                         Text="{Binding NewProcessInput, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Content="+" Command="{Binding AddProcessCommand}" Width="30" Margin="5,0,0,0"
                                        Background="#E7F3FF" BorderBrush="#0078D7" FontWeight="Bold"/>
                            </StackPanel>

                            <ItemsControl ItemsSource="{Binding BlockedProcessesList}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F0F0F0" BorderBrush="#CCC" BorderThickness="1" CornerRadius="12" Padding="8,3" Margin="0,0,5,5">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="12"/>
                                                <Button Content="✕" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}, Path=DataContext.RemoveProcessCommand}" 
                                                        CommandParameter="{Binding}"
                                                        Margin="8,0,0,0" Padding="0" FontSize="10" Background="Transparent" BorderBrush="Transparent" Foreground="#D32F2F" Cursor="Hand"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </GroupBox>

                    <Border Background="#FFF4CE" BorderBrush="#FFBA00" BorderThickness="1" Padding="10" CornerRadius="4"
                            Visibility="{Binding RestartWarningVisibility}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Labels[RestartWarning]}" Foreground="#664D03" FontStyle="Italic" TextWrapping="Wrap" MaxWidth="700"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

    </TabControl>
</Window>