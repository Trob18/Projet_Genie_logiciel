<Window x:Class="EasySave.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.WPF"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:enums="clr-namespace:EasySave.WPF.Enumerations"
        mc:Ignorable="d"
        Title="EasySave v2.0" Height="650" Width="950"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ObjectDataProvider x:Key="BackupTypeEnum" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:BackupType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="LanguageEnum" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:Language"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <TabControl Margin="5">

        <TabItem Header="{Binding Labels[TabHome]}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <GroupBox Header="{Binding Labels[JobName]}" Grid.Row="0" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding Labels[Name]}" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Labels[SourcePath]}" Grid.Column="1" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Labels[TargetPath]}" Grid.Column="2" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Labels[Type]}" Grid.Column="3" FontWeight="Bold"/>

                        <TextBox Text="{Binding JobName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="0" Margin="0,5,5,0"/>
                        <TextBox Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Margin="0,5,5,0"/>
                        <TextBox Text="{Binding TargetPath, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="2" Margin="0,5,5,0"/>

                        <ComboBox ItemsSource="{Binding Source={StaticResource BackupTypeEnum}}" 
                                  SelectedItem="{Binding SelectedType}" 
                                  Grid.Row="1" Grid.Column="3" Width="100" Margin="0,5,5,0" VerticalContentAlignment="Center"/>

                        <Button Content="{Binding Labels[Create]}" Command="{Binding CreateJobCommand}" 
                                Grid.Row="1" Grid.Column="4" Width="80" Margin="0,5,0,0"/>
                    </Grid>
                </GroupBox>

                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding BackupJobs}" 
                          SelectedItem="{Binding SelectedJob}"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          SelectionMode="Single"
                          BorderBrush="Gray" BorderThickness="1">

                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}" Width="150">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DataContext.Labels[JobName], RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>

                        <DataGridTextColumn Binding="{Binding SourceDirectory}" Width="*">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DataContext.Labels[SourcePath], RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>

                        <DataGridTextColumn Binding="{Binding TargetDirectory}" Width="*">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DataContext.Labels[TargetPath], RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>

                        <DataGridTextColumn Binding="{Binding Type}" Width="80">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DataContext.Labels[Type], RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>

                        <DataGridTextColumn Binding="{Binding State}" Width="80">
                            <DataGridTextColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DataContext.Labels[State], RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,10">
                    <Button Content="{Binding Labels[Delete]}" Command="{Binding DeleteJobCommand}" 
                            Width="100" Height="30" Margin="0,0,10,0" Background="#FFCCCC"/>

                    <Button Content="{Binding Labels[Execute]}" Command="{Binding ExecuteJobCommand}" 
                            Width="100" Height="30" Background="#CCFFCC" FontWeight="Bold"/>
                </StackPanel>

                <StatusBar Grid.Row="3" Height="30">
                    <StatusBarItem>
                        <TextBlock Text="Status :" FontWeight="Bold"/>
                    </StatusBarItem>
                    <StatusBarItem>
                        <TextBlock Text="{Binding StatusMessage}" Width="400"/>
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem HorizontalContentAlignment="Right">
                        <ProgressBar Value="{Binding ProgressValue}" Width="200" Height="15" Minimum="0" Maximum="100"/>
                    </StatusBarItem>
                    <StatusBarItem>
                        <TextBlock Text="{Binding ProgressValue, StringFormat={}{0}%}"/>
                    </StatusBarItem>
                </StatusBar>
            </Grid>
        </TabItem>

        <TabItem Header="{Binding Labels[TabSettings]}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/> <!-- Row for displaying tags -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding Labels[TitleSettings]}" Grid.Row="0" Grid.ColumnSpan="2" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="{Binding Labels[LogFormat]}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,10"
                          ItemsSource="{Binding LogFormats}"
                          SelectedItem="{Binding SelectedLogFormat}"/>

                <TextBlock Text="{Binding Labels[LangInterface]}" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                <ComboBox Grid.Row="2" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,10"
                          ItemsSource="{Binding Source={StaticResource LanguageEnum}}"
                          SelectedItem="{Binding SelectedLanguage}"/>

                <!-- Encrypt All option -->
                <TextBlock Text="{Binding Labels[EncryptAll]}" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                <CheckBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"
                          IsChecked="{Binding EncryptAll}"/>

                <!-- Tag input for encryption extensions -->
                <TextBlock Text="{Binding Labels[EncryptExtensions]}" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontSize="14"/>
                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EncryptAll}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBox x:Name="NewExtensionInputTextBox" Width="150" Text="{Binding NewExtensionInput, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button x:Name="AddExtensionButton" Content="{Binding Labels[AddExtension]}" Command="{Binding AddExtensionCommand}" Margin="5,0,0,0"/>
                </StackPanel>

                <ItemsControl x:Name="EncryptedExtensionsItemsControl" Grid.Row="5" Grid.Column="1" ItemsSource="{Binding EncryptedExtensionsList}" Margin="0,5,0,0">
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EncryptAll}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#E0E0E0" CornerRadius="3" Padding="5,2" Margin="0,0,5,5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}"/>
                                    <Button Content="x" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}, Path=DataContext.RemoveExtensionCommand}" 
                                            CommandParameter="{Binding}"
                                            Margin="5,0,0,0" Padding="3,0" FontWeight="Bold"
                                            Background="Transparent" BorderBrush="Transparent" Foreground="Red"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="{Binding Labels[RestartWarning]}" 
                           Visibility="{Binding RestartWarningVisibility}"
                           Grid.Row="6" Grid.ColumnSpan="2" 
                           Foreground="Gray" FontWeight="Bold" FontStyle="Italic" 
                           Margin="0,20,0,0" TextWrapping="Wrap"/>
            </Grid>
        </TabItem>

    </TabControl>
</Window>